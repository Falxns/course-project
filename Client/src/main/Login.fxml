<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.Client"
            prefHeight="200.0" prefWidth="300.0">
    <ImageView fitWidth="320" fitHeight="150">
        <image>
            <Image url="@../img/login.jpg"></Image>
        </image>
    </ImageView>
    <Label text="Enter nickname:" layoutX="30" layoutY="30"/>
    <TextField fx:id="login" minWidth="150" layoutX="130" layoutY="25"/>
    <Button layoutX="140" layoutY="60" onAction="#logIn" text="Join"/>

</AnchorPane>
